<h2><%= @topic.title %></h2>
<% @posts.each_with_index do |post , idx| %>
  <p>
    <%= post.post_user_name %>
    <%= idx + 1 %> : <%= post.post_message %>
    <%= link_to '[削除]', post_delete_path(post.id), method: :delete, data: {confirm: "削除してもよろしいですか？"} %>     
  </p>
<% end %>

<h3>新規書き込み</h3>
<%= form_for @new_post, :url => post_create_path do |f| %>
  <div style="display: inline-block">名前</div>
  <div style="display: inline-block"><%= f.text_area :post_user_name %></div>
  <div style="display: inline-block">本文</div>  
  <div style="display: inline-block"><%= f.text_area :post_message %></div>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>

<%= link_to '掲示板へ', topics_index_url %>
